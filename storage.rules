
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for job application resumes and employee documents
    match /job-applications/{allPaths=**} {
      allow read;
    }
    match /employee-documents/{allPaths=**} {
      allow read;
    }
    match /employee-avatars/{allPaths=**} {
      allow read;
    }
    
    // Allow writes only for authenticated users to specific paths they own.
    // This rule allows a user to upload their own leave attachment.
    match /leave-attachments/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

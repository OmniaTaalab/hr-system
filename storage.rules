rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access for authenticated users on all paths by default
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // --- Public Access Rules ---
    
    // Allow anyone to upload a resume to the job-applications path.
    // Disallow reads, so one applicant cannot view another's resume.
    match /job-applications/{fileName} {
      allow read: if false;
      allow write: if true;
    }
    
    // Allow anyone to read employee avatars, as they may be displayed publicly.
    // Only allow authenticated users (likely admins) to write them.
    match /employee-avatars/{employeeId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}

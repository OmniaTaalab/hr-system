rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public write access for job application resumes
    match /job-applications/{allPaths=**} {
      allow write: if true;
      allow read: if false; // Prevent anyone from reading submitted resumes
    }

    // Allow read access to all other files
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Only authenticated users can write elsewhere
    }
  }
}
